#!/usr/bin/env bash

ca_crt=/usr/local/uaa/config/ca/ca.crt
ca_key=/usr/local/uaa/config/ca/ca.key
service_name=${SERVICE_NAME}

if [ -f $ca_crt  ]; then
    log "Generating certificate"
    pem=/usr/local/uaa/config/uaa.pem
    ssl_args=(--ssl --sslCAFile $ca_crt --sslPEMKeyFile $pem)

cat >openssl.cnf <<EOL
[req]
req_extensions = v3_req
distinguished_name = req_distinguished_name
[req_distinguished_name]
[ v3_req ]
basicConstraints = CA:FALSE
keyUsage = nonRepudiation, digitalSignature, keyEncipherment
subjectAltName = @alt_names
[alt_names]
DNS.1 = $service_name
DNS.2 = localhost
DNS.3 = 127.0.0.1
EOL

    openssl genrsa -out uaa.key 2048
    openssl req -new -key uaa.key -out uaa.csr -subj "/CN=$service_name" -config openssl.cnf
    openssl x509 -req -in uaa.csr -CA $ca_crt -CAkey $ca_key -CAcreateserial -out mongo.crt -days 3650 -extensions v3_req -extfile openssl.cnf
    rm uaa.csr
    cat uaa.crt uaa.key > $pem
    rm uaa.key uaa.crt
fi
